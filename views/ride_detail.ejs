<%- include("layout", {
  user,
  body: `
  <div class="card">
    <h2>${ride.start_location} → ${ride.end_location}</h2>

    <p><strong>Driver:</strong> ${ride.driver_name}</p>
    <p><strong>Contact:</strong> ${ride.driver_email}</p>
    <p><strong>Time:</strong> ${ride.departure_time}</p>
    <p><strong>Price:</strong> ₹${ride.price_per_seat}</p>

    ${
      ride.driver_id === user.id
      ? "<p><strong>You are the driver.</strong></p>"
      : (
        myBooking
        ? `
        <p>You booked ${myBooking.seats_booked} seats.</p>
        <form method="POST" action="/bookings/${myBooking.id}/cancel?_method=DELETE">
          <button class="btn btn-secondary">Cancel booking</button>
        </form>
        `
        : `
        <form method="POST" action="/rides/${ride.id}/book">
          <label>Seats to Book</label>
          <input name="seats_booked" type="number" min="1" max="${ride.available_seats}">
          <button class="book-btn">Confirm Booking</button>
        </form>
        `
      )
    }
  </div>
`}) %>
