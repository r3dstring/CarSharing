<%- include("layout", {
  user,
  body: `
  <div class="card">
    <h2>Create Ride</h2>

    ${error ? `<p class="error">${error}</p>` : ""}

    <form method="POST">
      <label>Start Location</label>
      <input name="start_location">

      <label>End Location</label>
      <input name="end_location">

      <label>Departure (YYYY-MM-DD HH:MM)</label>
      <input name="departure_time">

      <label>Total Seats</label>
      <input type="number" name="total_seats">

      <label>Price per seat</label>
      <input type="number" step="0.01" name="price_per_seat">

      <label>Notes</label>
      <textarea name="notes"></textarea>

      <button>Create Ride</button>
    </form>
  </div>
`}) %>
