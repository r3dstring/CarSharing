<%- include('layout', { user, body: `
  <section>
    <h2>Create a Ride</h2>
    ${error ? `<p class="error">${error}</p>` : ''}

    <form method="POST" action="/rides" class="form-grid">
      <label>Start Location</label>
      <input type="text" name="start_location" required />

      <label>End Location</label>
      <input type="text" name="end_location" required />

      <label>Departure Time (YYYY-MM-DD HH:MM)</label>
      <input type="text" name="departure_time" placeholder="2025-11-30 09:30" required />

      <label>Total Seats</label>
      <input type="number" name="total_seats" min="1" max="10" required />

      <label>Price per Seat</label>
      <input type="number" step="0.01" name="price_per_seat" min="0" required />

      <label>Notes (optional)</label>
      <textarea name="notes" rows="3"></textarea>

      <button type="submit">Create Ride</button>
    </form>
  </section>
` }) %>
