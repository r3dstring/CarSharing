<%- include("layout", {
  user,
  body: `
  <h2>My Bookings</h2>

  ${asPassenger.map(b => `
    <div class="card">
      <h3>${b.start_location} → ${b.end_location}</h3>
      <p>Driver: ${b.driver_name}</p>
      <p>Date: ${b.departure_time}</p>
      <p>Seats: ${b.seats_booked}</p>
      <p>Total: ₹${b.seats_booked * b.price_per_seat}</p>
    </div>
  `).join("")}

  <h2>My Rides (as Driver)</h2>

  ${myRides.map(r => `
    <div class="card">
      <h3>${r.start_location} → ${r.end_location}</h3>
      <p>${r.departure_time}</p>
      <p>${r.available_seats}/${r.total_seats} seats left</p>
      <a href="/rides/${r.id}">Manage Ride</a>
    </div>
  `).join("")}
`}) %>
